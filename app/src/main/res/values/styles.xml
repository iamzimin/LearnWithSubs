<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--video list menu-->
    <style name="CardViewVideoListMenu" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <!--video list menu sort by-->
    <style name="CardViewSortByStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="cardElevation">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:duplicateParentState">true</item>
    </style>
    <style name="CheckBoxSortByStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:colorControlActivated">@color/red</item>
    </style>
    <style name="ButtonSortByStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/button_normal</item>
    </style>

    <style name="CardViewInEditListMenu" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardElevation">0dp</item>
        <item name="android:layout_marginHorizontal">5dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="TileInEditListMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="ImageInEditListMenu">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:tint">?attr/bottom_navigation_default</item>
    </style>
    <style name="TextInEditListMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:tint">?attr/bottom_navigation_default</item>
    </style>

</resources>