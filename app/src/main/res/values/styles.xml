<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--video list menu sort by-->
    <style name="CardViewSortByStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="cardElevation">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:duplicateParentState">true</item>
    </style>
    <style name="CheckBoxSortByStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:colorControlActivated">@color/red</item>
        <!--        <item name="android:button">@null</item>-->
    </style>
    <style name="ButtonSortByStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/button_normal</item>
    </style>


</resources>