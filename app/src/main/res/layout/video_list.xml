<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".feature_video_list.VideoListActivity">

    <androidx.fragment.app.FragmentContainerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:id="@+id/fragment_container"
        android:layout_weight="1"
        app:defaultNavHost="true"
        app:navGraph="@navigation/bottom_nav">
    </androidx.fragment.app.FragmentContainerView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/fragment_navigation"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:menu="@menu/bottom_menu"
        app:itemIconSize="@dimen/icon_bottom_menu"
        android:background="?attr/background_dark"/>

    <LinearLayout
        android:id="@+id/edit_list_layout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:visibility="gone"
        android:orientation="horizontal">

<!--        <com.google.android.material.card.MaterialCardView-->
<!--            android:id="@+id/add_preview_menu"-->
<!--            style="@style/CardViewInEditListMenu">-->
<!--            <LinearLayout-->
<!--                style="@style/TileInEditListMenu">-->
<!--                <ImageView-->
<!--                    style="@style/ImageInEditListMenu"-->
<!--                    android:src="@drawable/replay_5" />-->
<!--                <TextView-->
<!--                    style="@style/TextInEditListMenu"-->
<!--                    android:text="@string/add_preview"/>-->
<!--            </LinearLayout>-->
<!--        </com.google.android.material.card.MaterialCardView>-->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/add_subtitles_menu"
            style="@style/CardViewInEditListMenu">
            <LinearLayout
                style="@style/TileInEditListMenu">
                <ImageView
                    style="@style/ImageInEditListMenu"
                    android:padding="2dp"
                    android:src="@drawable/srt_file" />
                <TextView
                    android:id="@+id/add_subtitles_menu_text"
                    style="@style/TextInEditListMenu"
                    android:text="@string/add_subtitles"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/rename_menu"
            style="@style/CardViewInEditListMenu">
            <LinearLayout
                style="@style/TileInEditListMenu">
                <ImageView
                    style="@style/ImageInEditListMenu"
                    android:src="@drawable/edit"
                    android:padding="1dp" />
                <TextView
                    style="@style/TextInEditListMenu"
                    android:text="@string/rename"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/delete_menu"
            style="@style/CardViewInEditListMenu">
            <LinearLayout
                style="@style/TileInEditListMenu">
                <ImageView
                    style="@style/ImageInEditListMenu"
                    android:src="@drawable/trash" />
                <TextView
                    style="@style/TextInEditListMenu"
                    android:text="@string/delete"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/de_select_all_menu"
            style="@style/CardViewInEditListMenu">
            <LinearLayout
                style="@style/TileInEditListMenu">
                <ImageView
                    style="@style/ImageInEditListMenu"
                    android:src="@drawable/check_all" />
                <TextView
                    android:id="@+id/de_select_all_menu_text"
                    style="@style/TextInEditListMenu"
                    android:text="@string/select_all"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>


</LinearLayout>