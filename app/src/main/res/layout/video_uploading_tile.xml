<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"

    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"

    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="?attr/video_unavailable_dark"

    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.5">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/video_preview"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.514"
            app:srcCompat="@drawable/rectangle" />

        <ProgressBar
            android:id="@+id/progress_video_loading"
            style="?android:attr/progressBarStyle"
            android:layout_width="55dp"
            android:layout_height="46dp"
            android:indeterminateTint="@color/mainColor"
            android:indeterminate="true"
            android:progress="89"
            android:max="100"

            app:layout_constraintBottom_toBottomOf="@+id/video_preview"
            app:layout_constraintEnd_toEndOf="@+id/video_preview"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="@+id/video_preview"
            app:layout_constraintTop_toTopOf="@+id/video_preview"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/progress_video_loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="89"
            android:textColor="?attr/text_color"
            app:layout_constraintBottom_toBottomOf="@+id/progress_video_loading"
            app:layout_constraintEnd_toEndOf="@+id/progress_video_loading"
            app:layout_constraintStart_toStartOf="@+id/progress_video_loading"
            app:layout_constraintTop_toTopOf="@+id/progress_video_loading" />



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="110dp"
            android:paddingEnd="25dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/video_preview">

            <TextView
                android:id="@+id/video_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="File name hello hello"
                android:textColor="?attr/text_unavailable_dark"
                android:textSize="@dimen/video_name_in_video_tile"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.078" />

            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration: 1:23:45"
                android:textColor="?attr/text_unavailable_dark"
                android:textSize="@dimen/video_description_in_video_tile"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.527" />

            <TextView
                android:id="@+id/saved_words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Saved words: 123"
                android:textColor="?attr/text_unavailable_dark"
                android:textSize="@dimen/video_description_in_video_tile"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/duration"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.527" />

            <ProgressBar
                android:id="@+id/video_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.938" />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
