<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LearnWithSubs" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/background_dark</item>

        <item name="main_color">@color/main_color</item>


        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background_dark</item>

        <item name="bottom_icons_dark">@color/bottom_icons_dark</item>
        <item name="background_dark">@color/background_dark</item>
        <item name="text_color">@color/text_main_dark</item>

        <item name="card_background">@color/card_background</item>
        <item name="text_color_unavailable">@color/text_color_unavailable</item>


    </style>
</resources>