<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Main Card View-->
    <style name="CardViewMain" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginHorizontal">25sp</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="cardBackgroundColor">@color/card_background</item> <!--TODO attr-->
        <item name="cardCornerRadius">25dp</item>
    </style>

    <style name="MainTitleText">
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginHorizontal">25sp</item>
    </style>

    <style name="ImageSeparation">
        <item name="android:background">@drawable/rounded</item>
        <item name="android:backgroundTint">?attr/background_dark</item>
        <item name="android:minHeight">2sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ImageDownload" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="tint">?attr/text_color</item>



        <!--style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_gravity="center_vertical"
        android:clickable="true"
        android:padding="5dp"
        android:layout_marginEnd="10dp"
        android:scaleType="centerInside"

        app:srcCompat="@drawable/download"
        app:tint="?attr/text_color"-->
    </style>

    <!--Radio button Card View-->
    <style name="CardViewSettingsRadioButton" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardElevation">0dp</item>
    </style>
    <style name="RadioButtonInnerLayout">
        <item name="android:layout_marginVertical">10sp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginHorizontal">25sp</item>
    </style>
    <style name="RadioButtonTitleText">
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="RadioButtonSubTitleText">
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:textSize">15sp</item>
    </style>


</resources>