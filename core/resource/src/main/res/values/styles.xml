<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardViewClickableFocusable" parent="Widget.MaterialComponents.CardView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardElevation">0dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

<!--Menu sort by-->
    <style name="CardViewSortByStyle" parent="CardViewClickableFocusable">
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="cardElevation">0dp</item>
    </style>
    <style name="RadioButtonSortByStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:background">@null</item>
    </style>
    <style name="ButtonSortByStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">?attr/button_normal</item>
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:textSize">13sp</item>
    </style>

<!--Selectable menu-->
    <style name="CardViewInEditListMenu" parent="CardViewClickableFocusable">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="cardElevation">0dp</item>
        <item name="android:layout_marginHorizontal">5dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="TileInEditListMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="RecyclerInEditListMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <style name="ImageInEditListMenu">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:tint">?attr/bottom_navigation_icon</item>
    </style>
    <style name="TextInEditListMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:tint">?attr/bottom_navigation_icon</item>
    </style>

<!--Add button-->
    <style name="CardViewAdd" parent="CardViewClickableFocusable">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">1000dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>
    <style name="CardViewAddBackground">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>
    <style name="CardViewAddImage">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

<!--Video Card-->
    <style name="CardViewVideo" parent="CardViewClickableFocusable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="cardCornerRadius">@dimen/card_corner</item>
    </style>
    <style name="CardViewVideoImagePreview">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginHorizontal">15dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="CardViewVideoName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_default</item>
    </style>
    <style name="CardViewVideoStatistics">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginVertical">2dp</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>
    <style name="CardViewVideoCheckBox">
        <item name="android:layout_width">@dimen/image_size_medium</item>
        <item name="android:layout_height">@dimen/image_size_medium</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@null</item>
    </style>


    <style name="MenuBackground">
        <item name="android:background">@drawable/rounded</item>
        <item name="android:backgroundTint">?attr/pop_up_menu_background</item>
        <item name="android:layout_marginBottom">@dimen/dialog_menu_margins</item>
        <item name="android:layout_marginHorizontal">@dimen/dialog_menu_margins</item>
    </style>

    <style name="SaveButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:backgroundTint">@color/video_upload_green_card</item>
        <item name="android:text">@string/save</item>
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="TextArea">
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:textCursorDrawable">@drawable/cursor_edittext</item>
        <item name="android:backgroundTint">?attr/text_unavailable</item>
        <item name="android:textColorHint">?attr/text_unavailable</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>






    <!--Settings-->
<!--Main Card View-->
    <style name="CardViewMain" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginHorizontal">15dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="cardBackgroundColor">?attr/background_tile</item>
        <item name="cardCornerRadius">@dimen/card_corner</item>
    </style>
    <style name="MainTitleText">
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:textSize">@dimen/text_h2</item>
        <item name="android:layout_marginHorizontal">15dp</item>
    </style>
    <style name="ImageSeparation">
        <item name="android:background">@drawable/rounded</item>
        <item name="android:backgroundTint">?attr/background_color</item>
        <item name="android:minHeight">2dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="ImageDownload" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="tint">?attr/text_color</item>
    </style>

<!--Radio button Card View-->
    <style name="CardViewSettingsRadioButton" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardElevation">0dp</item>
    </style>
    <style name="RadioButtonInnerLayout">
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginHorizontal">25dp</item>
    </style>
    <style name="RadioButtonTitleTextAvailable">
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:textSize">@dimen/text_h2</item>
    </style>
    <style name="RadioButtonTitleTextUnavailable">
        <item name="android:textColor">?attr/text_unavailable</item>
        <item name="android:textSize">@dimen/text_h2</item>
    </style>
    <style name="RadioButtonSubTitleTextAvailable">
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>
    <style name="RadioButtonSubTitleTextUnavailable">
        <item name="android:textColor">?attr/text_unavailable</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

</resources>