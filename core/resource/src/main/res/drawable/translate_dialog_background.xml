<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dialog_menu_margins" />
            <gradient
                android:startColor="?attr/dialog_translate_header"
                android:endColor="?attr/dialog_translate_header"
                android:angle="90" />
        </shape>
    </item>
    <item android:top="35dp">
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp"
                android:bottomLeftRadius="@dimen/dialog_menu_margins"
                android:bottomRightRadius="@dimen/dialog_menu_margins" />
            <gradient
                android:startColor="?attr/dialog_translate_footer"
                android:endColor="?attr/dialog_translate_footer"
                android:angle="90" />
        </shape>
    </item>
</layer-list>
